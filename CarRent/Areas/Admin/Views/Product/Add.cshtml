@using CarRent.Areas.Admin.ViewModels.Product
@using CarRent.Areas.Admin.ViewModels.Category
@model ProductAddViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<form method="POST" asp-route="admin-product-add" enctype="multipart/form-data">
    <div class="form-group">
        <label for="exampleFormControlInput1">Brand:</label>
        <input class="form-control" id="exampleFormControlInput1" asp-for="@Model.Brand">

        <label for="exampleFormControlInput1">Model:</label>
        <input class="form-control" id="exampleFormControlInput1" asp-for="@Model.Model">

       
        <select asp-for="CategoryIds" asp-items="@(new SelectList(Model.Categories, nameof(CategoryListViewModel.Id), nameof(CategoryListViewModel.Name)))" class="form-select"> </select>




        <label for="exampleFormControlInput1">Year:</label>
        <input class="form-control" id="exampleFormControlInput1" asp-for="@Model.Year">


        <label for="exampleFormControlInput1">Fuel Type:</label>
        <input class="form-control" id="exampleFormControlInput1" asp-for="@Model.FuelType">

        <label for="exampleFormControlInput1">Seat Count:</label>
        <input class="form-control" id="exampleFormControlInput1" asp-for="@Model.SeatCount">

        <label for="exampleFormControlInput1">Gear Box:</label>
        <input class="form-control" id="exampleFormControlInput1" asp-for="@Model.GearBox">

        <label for="exampleFormControlInput1">Weekly Price</label>
        <input class="form-control" id="exampleFormControlInput1" asp-for="@Model.WeeklyPrice">

        <label for="exampleFormControlInput1">Daily Price:</label>
        <input class="form-control" id="exampleFormControlInput1" asp-for="@Model.DailyPrice">



        <label for="exampleFormControlInput1">Image:</label>
        <input class="form-control" id="exampleFormControlInput1"  asp-for="Image">
  

    </div>

    <button type="submit" class="btn btn-primary">Tesdiqle</button>
</form>