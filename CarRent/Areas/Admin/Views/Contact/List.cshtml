
@using CarRent.Areas.Client.ViewModels;
@model List<ContactViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mt-5">User Contact</h4>

            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>FirstName</th>
                            <th>Email</th>
                            <th>Subject</th>
                            <th>Message</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var contact in Model)
                        {
                            <tr>
                                <td>@contact.Name</td>
                                <td>@contact.Surname</td>
                                <td>@contact.EmailAdress</td>
                                <td>@contact.PhoneNumber</td>
                                <td class="text-end">

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
