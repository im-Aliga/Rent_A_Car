@{
    Layout = "";
}

@using CarRent.Areas.Client.ViewModels
@model CarListViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CarrentBaku</title>
    <link rel="icon" href="https://carrentbaku.az/storage/2022/11/cropped-icon-32x32.png">
    <link rel="stylesheet" href="~/Client/assets/css/bootstrap.css">
    <link rel="stylesheet" href="~/Client/assets/css/business.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Start Header -->
    <header>
        <div class="up">
            <div class="first">
                <ul>
                    <li> <i style="color: #fff;" aria-hidden="true" class="fas fa-phone-alt"></i></li>
                    <li><a href="">+994504777714</a></li>
                    <li>
                        <span class="elementor-icon-list-icon" style="color: #fff;"> <i aria-hidden="true" class="fas fa-envelope"></i> </span>
                        <span class="elementor-icon-list-text" style="color: #fff;">office@carrentbaku.az</span>
                    </li>
                    <li class="elementor-icon-list-item elementor-inline-item"> <a href="https://www.instagram.com/carrentbaku.az/"><span class="elementor-icon-list-icon"> <i aria-hidden="true" class="fab fa-instagram"></i> </span> <span class="elementor-icon-list-text"></span> </a></li>
                    <li class="elementor-icon-list-item elementor-inline-item"> <a href="https://www.facebook.com/rentcarsbaku/"><span class="elementor-icon-list-icon"> <i aria-hidden="true" class="fab fa-facebook"></i> </span> <span class="elementor-icon-list-text"></span> </a></li>

                </ul>
            </div>
            <div class="second">
                <ul class="elementor-icon-list-items elementor-inline-items">
                    <li class="elementor-icon-list-item elementor-inline-item"> <a href="https://az.carrentbaku.az"><span class="elementor-icon-list-text">AZ</span> </a></li>
                    <li class="elementor-icon-list-item elementor-inline-item"> <a href="https://ru.carrentbaku.az"><span class="elementor-icon-list-text">RU</span> </a></li>
                    <li class="elementor-icon-list-item elementor-inline-item"> <a href="https://ar.carrentbaku.az"><span class="elementor-icon-list-text">ENG</span> </a></li>
                </ul>
            </div>
        </div>
        <div class="down container">
            <div class="logo">
                <a href="./index.html">
                    <img src="https://carrentbaku.az/storage/2022/11/rent-logo-01-1-2048x261-1.png" alt="">
                </a>
            </div>

            <div class="cars">
                <ul>
                    <li id="Our-car">
                        <a href="#">Our Cars<i style="font-size: 15px;color:#0c9ae0 ;" class="fas fa-angle-down"></i></a>
                    </li>
                    <li><a href="./rent.html">Rent a car</a></li>
                    <li><a href="./contacts.html">Contacts</a></li>
                    <div class="Our-cars row g-5">
                        <div class="col-lg-4 crs ">
                            <a href="./economic.html">
                                <img src="https://carrentbaku.az/storage/2022/11/kia-rio-2016.png" alt="">
                                <p>Economic cars</p>
                            </a>
                        </div>
                        <div class="col-lg-4 crs">
                            <a href="./SUVs.html">
                                <img src="https://carrentbaku.az/storage/2022/11/bmw-x7-2021-1-1.png" alt="">
                                <p>SUVs</p>
                            </a>
                        </div>
                        <div class="col-lg-4 crs">
                            <a href="./business.html">
                                <img src="https://carrentbaku.az/storage/2022/11/hyundai-sonata-2017-1.png" alt="">
                                <p>Business cars</p>
                            </a>
                        </div>
                        <div class="col-lg-4 crs">
                            <a href="./premium.html">
                                <img src="https://carrentbaku.az/storage/2022/11/mercedes-sclass-2022.png" alt="">
                                <p>Premium cars</p>
                            </a>
                        </div>
                        <div class="col-lg-4 crs">
                            <a href="./minivan.html">
                                <img src="https://carrentbaku.az/storage/2022/11/mercedes-vclass-2017.png" alt="">
                                <p>Minivans</p>
                            </a>
                        </div>
                        <div class="col-lg-4 crs">
                        </div>
                    </div>
                </ul>

            </div>
        </div>
    </header>
    <!-- End Header -->
    <!-- Start Main -->
    <main>
        <section class="adress-info">
            <div class="topic container">
                <h4 style="font-weight: bold; font-size: 30px; color:#0c9ae0 ; "> Our Business Vehicles</h4>
                <h1 style="font-weight: bold; font-size: 50px; color: #f7faff;"> <span style="color:#0c9ae0;">Business</span>  cars for <span style="color: #0c9ae0;">business</span> inquries</h1>
            </div>
        </section>

        <section id="Business" class="container tab-menu" >
            <div class="row" style=" background-color: #f7faff;">
                @foreach (var item in Model.Cars)
                {
                    <div class="col-lg-3">
                        <div class="box">
                            <img src="~/@item.ImageUrl" alt="">
                            <div class="type">
                                <div class="name">
                                    <span> @item.Brand</span>
                                    <p> @item.Model</p>
                                </div>
                                <div class="price">
                                    <p>@item.DailyPrice AZN/day</p>
                                    <p>@item.WeeklyPrice AZN/week</p>
                                </div>

                            </div>
                            <div class="speciality row container">

                                <div class="col-lg-6 auto">
                                    <i aria-hidden="true" class="far fa-calendar-alt"></i>
                                    <p>@item.Year</p>
                                </div>
                                <div class="col-lg-6 auto">
                                    <i aria-hidden="true" class="fas fa-door-open"></i>
                                    <p> @item.FuelType</p>
                                </div>
                                <div class="col-lg-6 auto">
                                    <i aria-hidden="true" class="fas fa-users"></i>
                                    <p>@item.SeatCount seats</p>
                                </div>
                                <div class="col-lg-6 auto">
                                    <i aria-hidden="true" class="fas fa-car"></i>
                                    <p>@item.GearBox</p>
                                </div>
                            </div>

                            <div class="button container">
                                <a href="./rent.html" class="elementor-button-link elementor-button elementor-size-sm " role="button"> <span class="elementor-button-content-wrapper"> <span class="elementor-button-text">Rent Now</span> </span> </a>
                            </div>
                        </div>
                    </div>
                }
               
               
            </div>
        </section>

    </main>
    <!-- End Main -->
    <!-- Start Footer -->

    <footer>

        <section class="first">
            <div class="box">
                <i style="margin-left: 40px;" aria-hidden="true" class="fas fa-map-pin"></i>
                <h3>Locations</h3>
                <p style="margin-left: -30px;">
                    Head office: Aziz Aliyev 11 <br> (nearby Hard Rock Cafe) <br>
                    Sales office: 13 Khojali Avenue, Baku
                </p>
            </div>
            <div class="box">
                <i style="margin-left: 40px;" aria-hidden="true" class="fas fa-phone-square-alt"></i>
                <h3 style="margin-left: -30px;">Phone numbers</h3>
                <p style="margin-left: 5px;">
                    +994504777714 <br>
                    +994554777714 <br>
                    +994704777714
                </p>
            </div>
            <div class="box">
                <i style="margin-left: 40px;" aria-hidden="true" class="fas fa-envelope-open"></i>
                <h3 style="margin-left: 33px;">Email</h3>
                <p>office@carrentbaku.az</p>

            </div>

        </section>

        <section class="second">
            <div class="icon">
                <img src="https://carrentbaku.az/storage/2022/11/carrentbaku-white-logo.png" alt="">
            </div>
            <div class="logo ">
                <a href=" https://www.whatsapp.com/carrentbaku.az/">
                    <i aria-hidden="true" class="fab fa-whatsapp"></i>
                </a>

                <a href=" https://www.instagram.com/carrentbaku.az/">
                    <i aria-hidden="true" class="fab fa-instagram"></i>
                </a>
                <a href=" https://www.facebook.com/carrentbaku.az/">
                    <i aria-hidden="true" class="fab fa-facebook"></i>
                </a>
            </div>
            <div class="data">
                <i style="color: #fff;" aria-hidden="true" class="far fa-copyright"></i>
                <span style="color: #fff; font-weight: bold;">2023 Site crafted by Arcod Technology</span>
            </div>
        </section>
    </footer>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="./assets/js/app.js"></script>
    <!-- End Footer -->
</body>
</html>